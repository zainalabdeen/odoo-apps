<odoo>
    <data>
        <record id="view_users_switch_form" model="ir.ui.view">
            <field name="name">view.users.switch.form</field>
            <field name="model">switch.user</field>
            <field name="arch" type="xml">
                <form string="Switch Users">
                    <group>
                        <group>
                            <field name="user_id" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button name="preference_save" type="switch" string="Save" class="btn-primary"/>
                        <button name="preference_cancel" string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_res_users_switch" model="ir.actions.act_window">
            <field name="name">Switch User</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">switch.user</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>